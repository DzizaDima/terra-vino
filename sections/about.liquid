{{ 'section-about.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.5 | round: 0 }}px;
  }
{%- endstyle -%}

{%  liquid
  assign section_id = section.id
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign image = section.settings.image
  assign title = section.settings.title
  assign description = section.settings.description
  assign left_text = section.settings.left_text
  assign right_text = section.settings.right_text
%}

{%- style -%}
  .section-{{ section_id }}-padding {
    padding-top: {{ padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section_id }}-padding">
  <div class="page-width">
   <div class="about-section__wrapper">
    {% if left_text != blank %}
      <div class="about-section__side-text">
        {{ left_text }}
      </div>
    {% endif %}

    {% if title != blank  or description != blank %}
      <div class="about-section__content">
        {% if image != blank %}
          <div class="about-section__image">
            {% if left_text != blank %}
              <div class="about-section__side-text about-section__side-text--mobile">
                {{ left_text }}
              </div>
            {% endif %}
            {{ image | image_url: width: 1000 | image_tag: class: 'about-section__image-img', loading: 'lazy', fetchpriority: 'low' }}
            {% if right_text != blank %}
              <div class="about-section__side-text about-section__side-text--mobile">
                {{ right_text }}
              </div>
            {% endif %}
          </div>
        {% endif %}
        <div class="about-section__content-inner">
          {% if title != blank %}
            <h2 class="about-section__title">{{ title }}</h2>
          {% endif %}
          {% if description != blank %}
            <div class="about-section__description">{{ description }}</div>
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if right_text != blank %}
      <div class="about-section__side-text">
        {{ right_text }}
      </div>
    {% endif %}
   </div>
  </div>
</div>

{% schema %}
  {
    "name": "About",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "richtext",
        "id": "left_text",
        "label": "Left Text"
      }, {
        "type": "richtext",
        "id": "right_text",
        "label": "Right Text"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "presets": [
      {
        "name": "About"
      }
    ]
  }
{% endschema %}