{{ 'how-to-book.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .how-to-book {
    background-color: {{ section.settings.background_color }};
  }

  .how-to-book .content-wrapper {
    background-image: url('{{ 'paper-bg.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
{%- endstyle -%}

<section class="how-to-book color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <div class="how-to-book__content-wrapper content-wrapper">
      <div class="how-to-book__inner">
        <div class="how-to-book__columns">
          <!-- Public Events Column -->
          <div class="how-to-book__column how-to-book__column--public">
            <div class="how-to-book__card">
              <h3 class="how-to-book__card-title">{{ section.settings.public_title | default: 'Public Events' }}</h3>
              <p class="how-to-book__card-description">{{ section.settings.public_description }}</p>
              
              {%- if section.settings.public_image != blank -%}
                <div class="how-to-book__card-image">
                  {{
                    section.settings.public_image
                    | image_url: width: 100
                    | image_tag: 
                      class: 'how-to-book__icon',
                      loading: 'lazy'
                  }}
                </div>
              {%- endif -%}
            </div>
          </div>

          <!-- Private Enquiries Column -->
          <div class="how-to-book__column how-to-book__column--private">
            <div class="how-to-book__card">
              <h3 class="how-to-book__card-title">{{ section.settings.private_title | default: 'Private Enquiries' }}</h3>
              <p class="how-to-book__card-description">{{ section.settings.private_description }}</p>
              
              {%- if section.settings.button_label != blank -%}
                <a 
                  href="{{ section.settings.button_link }}" 
                  class="button button--primary how-to-book__button"
                >
                  {{ section.settings.button_label }}
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>

        {%- unless section.settings.bottom_description == blank -%}
          <div class="how-to-book__bottom-text">
            <p class="how-to-book__description">{{ section.settings.bottom_description }}</p>
          </div>
        {%- endunless -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.how_to_book.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.how_to_book.settings.title.default",
      "label": "t:sections.how_to_book.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.how_to_book.settings.public_events.header"
    },
    {
      "type": "inline_richtext",
      "id": "public_title",
      "default": "t:sections.how_to_book.settings.public_title.default",
      "label": "t:sections.how_to_book.settings.public_title.label"
    },
    {
      "type": "richtext",
      "id": "public_description",
      "default": "t:sections.how_to_book.settings.public_description.default",
      "label": "t:sections.how_to_book.settings.public_description.label"
    },
    {
      "type": "image_picker",
      "id": "public_image",
      "label": "t:sections.how_to_book.settings.public_image.label"
    },
    {
      "type": "header",
      "content": "t:sections.how_to_book.settings.private_enquiries.header"
    },
    {
      "type": "inline_richtext",
      "id": "private_title",
      "default": "t:sections.how_to_book.settings.private_title.default",
      "label": "t:sections.how_to_book.settings.private_title.label"
    },
    {
      "type": "richtext",
      "id": "private_description",
      "default": "t:sections.how_to_book.settings.private_description.default",
      "label": "t:sections.how_to_book.settings.private_description.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "t:sections.how_to_book.settings.button_label.default",
      "label": "t:sections.how_to_book.settings.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.how_to_book.settings.button_link.label"
    },
    {
      "type": "header",
      "content": "t:sections.how_to_book.settings.content.header"
    },
    {
      "type": "richtext",
      "id": "bottom_description",
      "default": "t:sections.how_to_book.settings.bottom_description.default",
      "label": "t:sections.how_to_book.settings.bottom_description.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.colors.header"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.how_to_book.settings.background_color.label",
      "default": "#F5EFE7"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "t:sections.how_to_book.presets.name"
    }
  ]
}
{% endschema %}
